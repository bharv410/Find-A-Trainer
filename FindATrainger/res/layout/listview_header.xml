<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#686868"
    android:id="@+id/blurrBackground"
    >
	<com.kidgeniushq.findatrainger.helpers.SquareImageView 
	    android:id="@+id/layout_header_image"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="90dp"
	    android:layout_marginRight="90dp"
	    android:layout_marginTop="30dp"
	    android:layout_marginBottom="60dp"
	    
	    android:scaleType="centerCrop"
	    android:src="@drawable/img_header"
	    />

	<TextView
	    android:id="@+id/layout_header_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/layout_header_image"
	    android:layout_alignLeft="@+id/layout_header_image"
	    android:layout_alignRight="@+id/layout_header_image"
	    android:background="#99000000"
	    android:text="View Profile"
	    android:gravity="center"
	    android:textColor="#FFF"
	    android:textAppearance="?android:attr/textAppearanceLarge" />
	
</RelativeLayout>